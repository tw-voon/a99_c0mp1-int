<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:height="100dp"
        android:width="1dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#ff0000" />
        </shape>
    </item>

    <item
        android:width="3dp"
        android:height="3dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#ff0000" />
        </shape>
    </item>
</layer-list>